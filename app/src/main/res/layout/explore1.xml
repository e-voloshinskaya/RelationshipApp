<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- 1) Заголовок экрана -->
    <TextView
        android:id="@+id/explore_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Изучение"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 2) Контент прокручивается под заголовком -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/explore_title"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clipToPadding="false">

            <!-- 1) Раздел "Учитесь" -->
            <!-- без подзаголовка, одна большая карточка посередине -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_learn"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginVertical="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/cardBlue">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="База знаний"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"
                        android:textColor="@android:color/white"/>

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="bottom|end"
                        android:src="@drawable/ic_book"
                        android:tint="@android:color/white"/>

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- 2) Раздел "Практикуйтесь" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Практикуйтесь"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurface"/>

                <TextView
                    android:id="@+id/see_all_practice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Смотреть все"
                    android:textAppearance="?attr/textAppearanceLabelLarge"
                    android:textColor="?attr/colorPrimary"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:drawablePadding="4dp"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <!-- Сетка 2×2 цветных карточек -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:rowOrderPreserved="false"
                android:useDefaultMargins="true"
                android:layout_marginTop="8dp">

                <!-- Card A -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/cardYellow">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Food & Drink"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="@android:color/white"/>

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="bottom|end"
                            android:src="@drawable/ic_food"
                            android:tint="@android:color/white"/>
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card B -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/cardCyan">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Travel & Vacation"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="@android:color/white"/>

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="bottom|end"
                            android:src="@drawable/ic_plane"
                            android:tint="@android:color/white"/>
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card C -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/cardGreen">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Personality Traits"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="@android:color/white"/>

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="bottom|end"
                            android:src="@drawable/ic_traits"
                            android:tint="@android:color/white"/>
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card D -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/cardBlue">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grateful For You"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="@android:color/white"/>

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="bottom|end"
                            android:src="@drawable/ic_prayer"
                            android:tint="@android:color/white"/>
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>


            <!-- 3) Раздел "Карта любви" -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Карта любви"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?attr/colorOnSurface"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginVertical="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/cardYellow">

                <!-- Здесь можно нарисовать map + сердца -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- фоновая карта -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_map"
                        android:tint="#40FFFFFF"/>

                    <!-- декоративные сердца -->
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_margin="16dp"
                        android:layout_gravity="bottom|start"
                        android:src="@drawable/ic_heart"
                        android:tint="@android:color/white"/>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- 4) Раздел "Банковский счёт эмоций" -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Банковский счёт эмоций"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?attr/colorOnSurface"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/cardGreen">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ваш текущий баланс эмоций"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="@android:color/white"/>

                    <!-- Здесь в будущем — график/бареры эмоций -->
                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progress="50"
                        android:progressTint="@android:color/white"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Отступ внизу под bottom nav -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Нижняя навигация -->
    <FrameLayout
        android:id="@+id/bottomNavContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include layout="@layout/layout_bottom_nav"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>